<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing || {}) %>;
</script>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title || "Untitled Listing" %></h3>
  </div>

  <div class="card show-card col-8 offset-2 listing-card">

    <img
      src="<%= listing.image?.url || '/images/default.jpg' %>"
      class="card-img-top show-image"
      alt="listing image"
    >

    <div class="card-body">
      <p class="card-text">
        Owned by
        <i><%= listing.owner?.username || "Unknown" %></i>
      </p>

      <p class="card-text"><%= listing.description || "No description provided." %></p>

      <p class="card-text">
        &#8377;
        <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
      </p>

      <p class="card-text"><%= listing.location || "" %></p>
      <p class="card-text"><%= listing.country || "" %></p>
    </div>
  </div>

  <% if (
    currUser &&
    listing.owner &&
    String(listing.owner._id) === String(currUser._id)
  ) { %>
    <div class="col-8 offset-2 mt-3 btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">
        Edit
      </a>

      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=DELETE"
        class="d-inline"
      >
        <button class="btn btn-dark ms-2">Delete</button>
      </form>
    </div>
  <% } %>

  <div class="col-8 offset-2 mb-3">
    <hr />

    <% if (currUser) { %>
      <h4>Leave a Review</h4>

      <form
        action="/listings/<%= listing._id %>/reviews"
        method="POST"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3">
          <label class="form-label">Rating</label>

          <fieldset class="starability-slot">
            <input type="radio" class="input-no-rate" name="review[rating]" value="1" checked />
            <% for (let i = 1; i <= 5; i++) { %>
              <input type="radio" id="rate-<%= i %>" name="review[rating]" value="<%= i %>" />
              <label for="rate-<%= i %>"><%= i %> star</label>
            <% } %>
          </fieldset>
        </div>

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            rows="5"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please add some comments for review
          </div>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
      </form>

      <hr />
    <% } %>

    <% if (listing.reviews && listing.reviews.length > 0) { %>
      <div class="row">
        <p><b>All Reviews</b></p>

        <% for (let review of listing.reviews) { %>
          <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
              <h5 class="card-title">
                @<%= review.author?.username || "Anonymous" %>
              </h5>

              <p class="card-text"><%= review.comment || "" %></p>

              <p
                class="starability-result card-text"
                data-rating="<%= review.rating || 0 %>"
              ></p>

              <% if (
                currUser &&
                review.author &&
                String(review.author._id) === String(currUser._id)
              ) { %>
                <form
                  class="mb-3"
                  method="POST"
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                >
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>

      <hr />
    <% } %>

    <div class="mb-3">
      <h4>Where you'll be</h4>
      <div id="map"></div>
    </div>
  </div>
</div>

<script src="/js/map.js"></script>
